<body>

    <div class="container">
        @*<h2>Tibetan Art Gallery </h2>*@
        <br />
        <br />
       
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img  src="http://www.dream-wallpaper.com/free-wallpaper/art-wallpaper/tibetan-thangka-painting-2-wallpaper/1680x1050/free-wallpaper-12.jpg" alt="Los Angeles" style="width: 100%; height: auto; max-height: 570px;">
                </div>

                <div class="item">
                    <img src="https://fthmb.tqn.com/e0ApwIPTwUODv_qXWRs2bpdbatQ=/1255x837/filters:no_upscale():fill(FFCC00,1)/golden-icon-china-56a0c4965f9b58eba4b3a670.jpg" alt="Chicago" style="width: 100%; height: auto; max-height: 570px;">
                </div>

                <div class="item">
                    <img  src="https://www.bonninashley.com/images/products/secondary/che00028-2.jpg" alt="New york" style="width: 100%; height: auto; max-height: 570px;">
                </div>

                <div class="item">
                    <img  src="https://www.makemytrip.com/travel-guide/media/dg_image/leh/Tibetan-Market-Leh.jpg" alt="Boston"style="width: 100%; height: auto; max-height: 570px;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>

